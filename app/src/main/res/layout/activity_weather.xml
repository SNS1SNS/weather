<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Activitis.weather">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_200"
        android:text="Сіздің қалаңыздағы ауа-райы"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_marginTop="50sp"
        />

    <EditText
        android:id="@+id/userGorod"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:layout_marginHorizontal="50sp"
        android:background="@color/teal_200"
        android:hint="Қалаңызды еңгізіңіз"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textPersonName"

        />

    <Button
        android:id="@+id/glavBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userGorod"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="130dp"
        android:backgroundTint="@color/teal_200"
        android:text="Ауа-райын білу"
        />
    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_200"
        android:layout_below="@id/glavBtn"

        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_marginTop="50sp"
        />



</RelativeLayout>